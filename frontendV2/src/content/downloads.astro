---
import { LEAGUE } from "@content/constants";
import Layout from "@layouts/BaseLayout.astro";
import DownloadTimes from "@components/DownloadFileTime";

type Props = {
  league: "siba" | "college";
};

const { league } = Astro.params as Props;
const title = `Download ${
  league === "siba" ? "SIBA (Pro)" : "SICBA (College)"
} Program Files`;
const leagueType = league === "siba" ? LEAGUE.pro : LEAGUE.college;
const leagueName = `SI${leagueType === LEAGUE.college ? "C" : ""}BA`;
const graphicsFile = `DDS${leagueType === LEAGUE.college ? "C" : "P"}B2021`;
---

<Layout content={{ title: title }}>
  <section class="content">
    <h1 id={`downloads-${leagueType}`}>{title}</h1>
    <p>
      Below are the necessary files for the {leagueType} league ({leagueName}).
      Make sure all your files are up to date.
    </p>
    <p>
      <b><a href={`/files/${leagueName}.zip`} download> League File:</a></b> This
      file runs all the simulation from the league. Add this to your own copy of
      the program so you have the most updated version of the league.
      <br />
      <i
        >Last Modified: <DownloadTimes
          league={leagueType}
          file={"league"}
          client:idle
        /></i
      >
    </p>
    <p>
      <b
        ><a href={`/files/${leagueType}/${graphicsFile}.zip`} download>
          Graphics File:</a
        ></b
      > This file runs all the simulation from the league. Add this to your own copy
      of the program so you have the most updated version of the league.
      <br />
      <i
        >Last Modified: <DownloadTimes
          league={leagueType}
          file={"graphics"}
          client:idle
        /></i
      >
    </p>
  </section>
</Layout>
